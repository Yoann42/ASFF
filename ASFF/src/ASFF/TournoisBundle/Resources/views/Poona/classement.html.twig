{# src/ASFF/PlatformBundle/Resources/view/Advert/classement.html.twig #}

{% extends "ASFFCoreBundle::layout.html.twig" %}

{% block title %}
  {{ parent() }}
{% endblock %}

{% block body %}

  {# On définit un sous-titre commun à toutes les pages du bundle, par exemple #}
  <h1>Classement de {{ nom }}</h1>

  <hr>

  {# On définit un nouveau bloc, que les vues du bundle pourront remplir #}
  {% block ocplatform_body %}
	<h2>Licence n°{{ licence }}</h2>
	
	<p>Classement Simple : {{ simple }}</p>
	<p>Classement Double : {{ double }}</p>
	<p>Classement Mixte : {{ mixte }}</p>
	
  {% endblock %}

{% endblock %}
